<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.StackLayoutDemo"
             Title="StackLayoutDemo">
    <VerticalStackLayout Margin="20" HorizontalOptions="Start">
        <HorizontalStackLayout VerticalOptions="Start" Spacing="10">
            <Label Text="Nome" VerticalOptions="Center"/>
            <Entry WidthRequest="150" VerticalOptions="Center"/>
            <Label Text="Escreva o nome" TextColor="Red" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout VerticalOptions="Start" Spacing="10">
            <Label Text="Idade" VerticalOptions="Center"/>
            <Entry WidthRequest="150" VerticalOptions="Center"/>
            <Label Text="Escreva a idade" TextColor="Red" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>